<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwillbs.project_movie.mapper.MovieMapper">

	<!-- DB에 영화등록 -->
	<insert id="insertMovie">
		INSERT
		INTO movie
		VALUES (
			#{movie_code}
			, #{movie_name}
			, #{movie_genre}
			, #{movie_director}
			, #{movie_actor}
			, #{release_date}
			, #{running_time}
			, #{age_limit}
			, #{movie_rating}
			, #{movie_synopsis}
			, #{movie_status}
			, #{movie_img1}
			, #{movie_img2}
			, #{movie_img3}
			, #{movie_img4}
			, #{movie_img5}
			, #{movie_trailer}
			, now()
			, #{regist_admin_id}
		)
	</insert>
	
	<!-- 등록된 영화정보 조회 -->
	<select id="SelectMovie" resultType="movieVO">
		SELECT *
		FROM movie
		WHERE movie_code = #{movie_code}
	</select>
	
	<!-- 등록된 총 영화목록 수 조회 -->
	<select id="selectMovieListCount" resultType="int">
		SELECT COUNT(*)
		FROM movie
	</select>
	
	<!-- 페이징처리를 위한 영화목록 조회 -->
	<select id="selectMovieList" resultType="movieVO">
		SELECT *
		FROM movie
		ORDER BY movie_name ASC
		LIMIT
			#{startRow}
			, #{listLimit}
	</select>
	
	<!-- 검색조건별 영화검색 -->
	<select id="selectSearchMovie" resultType="movieVO">
		SELECT *
		FROM movie
		<where> 
			<if test="howSearch != null and searchKeyword != null"> 
				${howSearch} LIKE CONCAT('%', #{searchKeyword}, '%') 
			</if>
		</where>
	</select>
	
	<!-- 조회조건 컬럼별 해당 영화 수 검색 -->
	<select id="selectMovieCount" resultType="int">
		SELECT COUNT(*)
		FROM movie
		WHERE ${column_name} = #{movie_status}
	</select>
	
	<!-- 영화상태 업데이트 -->
	<update id="updateMovieStatus">
		UPDATE movie
		SET movie_status = #{movie_status}
		WHERE movie_code = #{movie_code}
	</update>
	
</mapper>